<body>
    <div class="container">
        <h1>Nuevo Dojo</h1>
        <form:form method="POST" class="" action=""  modelAttribute="dojo">
            <input type="hidden" name="_method" value="{method}">
            <p>
                <form:errors path="nombre" class="errorList"/>
                <form:label path="nombre">Name</form:label>
                <form:input path="nombre"/>
            </p>
            <button>Guardar</button>
            <a href="/dojos">Cancelar</a>
        </form:form>
    </div>
</body>
